<resources>

    <style name="PTheme.Edit" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ErrorAnimation" parent="android:Animation">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_down_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_up_exit</item>
    </style>

</resources>